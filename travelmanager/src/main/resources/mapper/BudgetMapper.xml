<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.vinn.travelmanager.mapper.BudgetMapper">

    <resultMap id="BaseResultMap" type="com.vinn.travelmanager.entity.Budget">
        <id column="id" property="id"/>
        <result column="plan_id" property="planId"/>
        <result column="category" property="category"/>
        <result column="amount" property="amount"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, plan_id, category, amount, create_time
    </sql>

    <insert id="insert" parameterType="com.vinn.travelmanager.entity.Budget" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO budget (plan_id, category, amount)
        VALUES (#{planId}, #{category}, #{amount})
    </insert>

    <insert id="batchInsert" parameterType="java.util.List">
        INSERT INTO budget (plan_id, category, amount)
        VALUES
        <foreach collection="budgets" item="item" separator=",">
            (#{item.planId}, #{item.category}, #{item.amount})
        </foreach>
    </insert>

    <select id="selectByPlanId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM budget
        WHERE plan_id = #{planId}
        ORDER BY id
    </select>

    <delete id="deleteByPlanId">
        DELETE FROM budget
        WHERE plan_id = #{planId}
    </delete>

    <delete id="deleteById">
        DELETE FROM budget
        WHERE id = #{id}
    </delete>

</mapper>

