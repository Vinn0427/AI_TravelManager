<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.vinn.travelmanager.mapper.PlanMapper">

    <resultMap id="BaseResultMap" type="com.vinn.travelmanager.entity.Plan">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="destination" property="destination"/>
        <result column="start_date" property="startDate"/>
        <result column="end_date" property="endDate"/>
        <result column="total_days" property="totalDays"/>
        <result column="budget" property="budget"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, user_id, destination, start_date, end_date, total_days, budget, create_time
    </sql>

    <insert id="insert" parameterType="com.vinn.travelmanager.entity.Plan" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO plan (user_id, destination, start_date, end_date, total_days, budget)
        VALUES (#{userId}, #{destination}, #{startDate}, #{endDate}, #{totalDays}, #{budget})
    </insert>

    <update id="update" parameterType="com.vinn.travelmanager.entity.Plan">
        UPDATE plan
        SET
        destination = #{destination},
        start_date = #{startDate},
        end_date = #{endDate},
        total_days = #{totalDays},
        budget = #{budget}
        WHERE id = #{id} AND user_id = #{userId}
    </update>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM plan
        WHERE id = #{id}
    </select>

    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM plan
        WHERE user_id = #{userId}
        ORDER BY create_time DESC
    </select>

    <delete id="deleteById">
        DELETE FROM plan
        WHERE id = #{id}
    </delete>

</mapper>

